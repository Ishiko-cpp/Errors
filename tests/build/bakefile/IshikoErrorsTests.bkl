import ../../../include/Ishiko/Errors.bkl;
ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/tests/include/Ishiko/Tests/Core.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2017.solutionfile = ../vc15/IshikoErrorsTests.sln;
vs2015.solutionfile = ../vc14/IshikoErrorsTests.sln;
vs2013.solutionfile = ../vc12/IshikoErrorsTests.sln;

program IshikoErrorsTests : IshikoErrors, IshikoTestsCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestsCore IshikoProcess IshikoErrors boost_filesystem boost_system;
    }

    headers
    {
        ../../src/ErrorConditionTests.h
        ../../src/ErrorTests.h
        ../../src/MessageErrorExtensionTests.h
        ../../src/IOErrorExtensionTests.h
        ../../src/ChainErrorExtensionTests.h
        ../../src/ExceptionTests.h
        ../../src/StreamUtilitiesTests.h
        ../../src/Helpers/TestErrorCategory1.h
        ../../src/Helpers/TestErrorCategory2.h
    }

    sources
    {
        ../../src/main.cpp
        ../../src/ErrorConditionTests.cpp
        ../../src/ErrorTests.cpp
        ../../src/MessageErrorExtensionTests.cpp
        ../../src/IOErrorExtensionTests.cpp
        ../../src/ChainErrorExtensionTests.cpp
        ../../src/ExceptionTests.cpp
        ../../src/StreamUtilitiesTests.cpp
        ../../src/Helpers/TestErrorCategory1.cpp
        ../../src/Helpers/TestErrorCategory2.cpp
    }
}
