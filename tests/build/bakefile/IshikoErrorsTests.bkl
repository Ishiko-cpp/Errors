ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/errors/include/Ishiko/Errors.bkl;
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/IshikoErrorsTests.sln;
vs2017.solutionfile = ../vc15/IshikoErrorsTests.sln;
vs2015.solutionfile = ../vc14/IshikoErrorsTests.sln;
vs2013.solutionfile = ../vc12/IshikoErrorsTests.sln;

program IshikoErrorsTests : IshikoErrors, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoConfiguration IshikoXML IshikoFileSystem IshikoProcess IshikoTime IshikoText IshikoErrors;
        libs += fmt boost_filesystem;
    }

    headers
    {
        ../../src/ErrorConditionTests.hpp
        ../../src/ErrorMessageTests.hpp
        ../../src/ErrorTests.hpp
        ../../src/ExceptionTests.hpp
        ../../src/IOErrorExtensionTests.hpp
        ../../src/MessageErrorExtensionTests.hpp
        ../../src/StreamUtilitiesTests.hpp
        ../../src/Helpers/TestErrorCategory1.hpp
        ../../src/Helpers/TestErrorCategory2.hpp
    }

    sources
    {
        ../../src/main.cpp
        ../../src/ErrorConditionTests.cpp
        ../../src/ErrorMessageTests.cpp
        ../../src/ErrorTests.cpp
        ../../src/ExceptionTests.cpp
        ../../src/IOErrorExtensionTests.cpp
        ../../src/MessageErrorExtensionTests.cpp
        ../../src/StreamUtilitiesTests.cpp
        ../../src/Helpers/TestErrorCategory1.cpp
        ../../src/Helpers/TestErrorCategory2.cpp
    }
}
